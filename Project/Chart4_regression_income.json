{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

   "data": {
    "url": "https://raw.githubusercontent.com/datasciencejames/datasciencejames.github.io/main/Project/Regression/g60_85_income.csv",
    "format": {"type": "csv"}
  },

 "title": {
    "text": "Growth based on Income inequality: 1960-1985",
    "subtitle": "Source:  Fields (1989), Jain (1975), Summers-Heston (1984)  ",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start"
  },
  
 "height": 500,
 "width": 500,

"layer": [
{"mark": {"type": "point", "size": 30, "color": "#2ebdff"},

"encoding": {
    "x": {
      "field": "gini60_income",
      "type": "quantitative",
      "title": "Gini Index", 
      "scale":{"domain":[0.29, 0.7]}
    },
    "y": {
      "field": "g60-85",
      "type": "quantitative",
      "title": "GDP growth rate"
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "country"},
      {"field": "gini60_income", "type": "quantitative", "title": "Gini"},
      {"field": "g60-85", "type": "quantitative", "title": "Growth rate" }
      ]}},

      {"mark": {
        "type": "line",
        "color":"#218fb8", "size": 3},
      "transform":[
        {
          "regression": "g60-85",
          "on": "gini60_income"
        }
      ],
      "encoding": {
        "x": {
          "field": "gini60_income",
          "type": "quantitative",
          "axis": {"grid": false}
         
        },
        "y": {
          "field": "g60-85",
          "type": "quantitative",
          "axis": {"grid": false}
        }
      }
    }
    ]
}
