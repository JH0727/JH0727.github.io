{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"description": "Used land gini from Taylor and Hudson (1972) and calculated growth rate same as in the previous regression",
   "data": {
    "url": "https://raw.githubusercontent.com/datasciencejames/datasciencejames.github.io/main/Project/Regression/g60_85_land.csv",
    "format": {"type": "csv"}
  },

 "title": {
    "text": "Growth based on Land distribution inequality: 1960-1985",
    "subtitle": "Source: Taylor and Hudson (1972), Summers-Heston(1984)",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start"
  },
  
 "height": 500,
 "width": 500,

"layer": [
{"mark": {"type": "point", "size": 40, "color": "#2ebdff"},

"encoding": {
    "x": {
      "field": "gini_land",
      "type": "quantitative",
      "title": "Gini",
       "scale":{"domain":[30, 100]}
    },
    "y": {
      "field": "g60-85",
      "type": "quantitative",
      "title": "Growth rate"
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "country"},
      {"field": "gini_land", "type": "quantitative", "title": "Gini"},
      {"field": "g60-85", "type": "quantitative", "title": "Growth rate" }
      ]}},

      {"mark": {
        "type": "line",
        "color":"#218fb8", "size": 3},
      "transform":[
        {
          "regression": "g60-85",
          "on": "gini_land"
        }
      ],
      "encoding": {
        "x": {
          "field": "gini_land",
          "type": "quantitative",
          "axis": {"grid": false}
         
        },
        "y": {
          "field": "g60-85",
          "type": "quantitative",
          "axis": {"grid": false}
        }
      }
    }
    ]
}
