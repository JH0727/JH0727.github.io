{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",  


  "width":500,
  "height":300,
  "title": {"text": "World map",
    "subtitle":["Growth rate from 1960 to 1985(%), Data source: Summers and Heston"],
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "subtitlePadding":10,
    "anchor": "middle",
    "color": "black"
  },

  "data": {
    "url":"https://raw.githubusercontent.com/datasciencejames/datasciencejames.github.io/main/Project/Map/World_map_project.json",
    "format":{"property": "features"}
  },

  "params": [
    {
      "name": "Year",
      "value": 1960,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2021,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "transform": [
    {
    "lookup":"properties.sovereignt",

    "from":{
        "data":{"url":"https://raw.githubusercontent.com/datasciencejames/datasciencejames.github.io/main/Project/Map/Final_API_GDP_GINI.csv"},
        "key":"Country",
        "fields":["GDP per capita","GINI"]
        }
    }
    ],


  "mark":{
    "type": "geoshape",
    "stroke":"darkblue",
    "strokeWidth":0.5},

  "encoding":{
     "color":{
        "field":"GDP per capita",
        "type": "quantitative"
    },
"tooltip":[
    {"field":"properties.sovereignt", "type":"nominal", "title":"Country"},
    {"field":"GDP per capita", "title": "GDP per capita"},
    {"field":"GINI", "title": "GINI"}
  ]
  }
  }
